extends layout

block stylesheets
  link(rel='stylesheet', href='/layout.css')
  link(rel='stylesheet', href='/userprofile.css')
  link(href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css', rel='stylesheet')

block content
  .profile-container
    .top-banner
      i.fas.fa-globe-americas.banner-icon
      h1 Hello, #{user.name}!
      span.typing-text#typing-text Learning: English 🇬🇧 | French 🇫🇷 | Italian 🇮🇹 | Spanish 🇪🇸 | Turkish 🇹🇷

    if user && user.profile_picture
      img.profile-pic(src=`/uploads/${user.profile_picture}`, alt='Profile Picture')

    .profile-details
      table.user-profile-table
        tr
          th Name:
          td #{user.name}
        tr
          th Email:
          td #{user.email}
        tr
          th Phone:
          td #{user.phone_number}
        tr
          th Bio:
          td #{user.bio}
        tr
          th Joined:
          td #{user.created_at}
    
    a.back-button(href="/homepage") ← Back to Home
