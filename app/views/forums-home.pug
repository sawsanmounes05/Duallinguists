extends layout

block stylesheets
  link(rel="stylesheet", href="/layout.css")
  style.
    /* Global Reset & Fonts */
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body { font-family: 'Segoe UI', sans-serif; background: #f2f5f8; color: #333; }

    /* Hero Section */
    .hero {
      background: linear-gradient(135deg, #0083b0, #00b4db);
      padding: 4rem 1rem;
      text-align: center;
      color: #fff;
      border-bottom-left-radius: 50% 20%;
      border-bottom-right-radius: 50% 20%;
    }
    .hero h1 { font-size: 3rem; margin-bottom: 1rem; text-shadow: 2px 2px 4px rgba(0,0,0,0.3); }
    .hero p { font-size: 1.5rem; opacity: 0.9; }

    /* Main Container */
    .page-container {
      max-width: 1200px;
      margin: -50px auto 2rem;
      padding: 2rem;
      background: rgba(255,255,255,0.98);
      border-radius: 16px;
      box-shadow: 0 12px 30px rgba(0,0,0,0.1);
    }

    /* Section Title */
    .section-title {
      text-align: center;
      font-size: 1.8rem;
      margin-bottom: 2rem;
      color: #0083b0;
      position: relative;
    }
    .section-title::after {
      content: "";
      display: block;
      width: 60px;
      height: 4px;
      background: #00b4db;
      margin: 0.5rem auto 0;
      border-radius: 2px;
    }

    /* Cards Grid */
    .card-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 1.5rem;
      list-style: none;
      padding: 0;
      margin-bottom: 2rem;
    }
    .card {
      background: #fff;
      border-radius: 16px;
      padding: 1.5rem;
      text-align: center;
      box-shadow: 0 6px 20px rgba(0,0,0,0.1);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      position: relative;
      cursor: pointer;
      overflow: hidden;
    }
    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 30px rgba(0,0,0,0.15);
    }
    .card::before {
      content: "üí¨";
      font-size: 3rem;
      position: absolute;
      top: 10px;
      right: 10px;
      opacity: 0.2;
    }
    .card span {
      display: block;
      margin-top: 1rem;
      font-size: 1.6rem;
      font-weight: bold;
      color: #0083b0;
    }
    .empty-state {
      text-align: center;
      font-size: 1.2rem;
      color: #777;
      margin-bottom: 2rem;
    }

block content
  .hero
    h1 üåç Language Forums
    p Join a forum to ask questions, share insights, and view past discussions!

  .page-container
    h2.section-title Available Forums
    ul#availableForums.card-grid
      if languages && languages.length
        each lang in languages
          li
            a.card(href=`/groupchat/${lang.LanguageID}`)
              span= lang.LanguageName
      else
        .empty-state
          p No available forums.

